<div class="row">
	<div class="col-3 ">
  <%= attachment_image_tag(user, :profile_image, :fill, 150, 150, fallback: "no_image.jpg") %>
  </div>
  <div class="col-9">
  	<div class="row">
  		<div class="col-3">
	  <h2><%= user.name %></h2>
	  </div>
	  <div class="col-6">
	  <% if user == current_user %>
  <%= link_to 'プロフィール編集',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <% else %>
    <% if current_user.following?(user) %>
  <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete,class: "btn btn-outline-secondary btn-block" %>
<% else %>
  <%= link_to "フォロー", user_relationships_path(user.id), method: :post,class: "btn btn-outline-secondary btn-block" %>
<% end %>
  <% end %>
 </div>
 </div>
	  <div class="row">
	  	<div class="col-3 mt-2">投稿数<%= user.plans.count %>件</div>
	  	<div class="col-3  mt-2"><%= link_to user_followings_path(user) do %>フォロー数<%= user.followings.count %>人</div><% end %>
	  	<div class="col-3  mt-2"><%= link_to user_followers_path(user) do %>フォロワー数<%= user.followers.count %>人<% end %></div></div>
	  <div class="mt-2">
	  <%= user.introduction %>
	  </div>
  </div>
  </div>



