<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	</tr>
	<tr>
	  <th>投稿数</th>
	  <th><%= user.plans.count %>件</th>
	</tr>
	<tr>
	  <th><%= link_to user_followings_path(user) do %>フォロー数</th>
	  <th><%= user.followings.count %>人</th>
	</tr><% end %>
	<tr>
	  <th><%= link_to user_followers_path(user) do %>フォロワー数</th>
	  <th><%= user.followers.count %>人<% end %></th>
  </tr>
</table>

 <% if current_user != user %>
