<div class="profile-container  offset-md-1 justify-content-center">
  <div class="col-md-6 mt-3 px-sm-0 ">
<%= render 'users/info', user: @user %>

<% if current_user.following?(@user) %>
  <%= link_to "Unfollow", user_relationships_path(@user.id), method: :delete %>
<% else %>
  <%= link_to "Follow", user_relationships_path(@user.id), method: :post %>
<% end %>

<%=render 'relationships/followings', user: @user %>
<%=render 'relationships/followers', user: @user %>

</div>
<div class='row'>
<% @plan.each do |plan| %>
<div class="card w-50 mx-auto mt-5 shadow-lg col-3">
   <div class="card-body">

  <p><%= link_to plan_path(plan.id) do %><%= plan.title %></p> <% end %>
  <p><%= plan.content %></p>
</div>
</div>
<% end %>
</div>
</div>
</div>
