  </div>

  <div class="plan-container ">

<div class="plan-list col-lg-8 offset-lg-2 ">
  <div class="row">
    <div class="d-flex flex-wrap">
  <% @plan.each do |plan| %>
<div class="card  shadow-lg  mr-2 mb-2" style="width: 18rem;">
   <div class="card-body">

  <p><%= link_to plan_path(plan.id) do %><%= plan.title %></p> <% end %>
  <p><%= plan.content %></p>
</div>
</div>

<% end %>
</div>
</div>
</div>
</div>
