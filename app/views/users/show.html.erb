<div class="profile-container  offset-md-1 justify-content-center">
  <div class="col-md-6 mt-3 px-sm-0 ">
<%= render 'users/info', user: @user %>

</div>
<div class='row'>
<% @plan.each do |plan| %>
<div class="card w-50 mx-auto mt-5 shadow-lg col-3">
   <div class="card-body">

  <p><%= link_to plan_path(plan.id) do %><%= plan.title %></p> <% end %>
  <p><%= plan.content %></p>
</div>
</div>
<% end %>
</div>
</div>
</div>
