<div class="col-3 ">
<%= render 'users/info', user: current_user %>
</div>
<div class="card-list-row  mx-5 ">
<div class="d-inline-flex p-2 bd-highlight　 ">

<% @plan.each do |plan| %>
<div class="card w-50 mx-auto mt-5 shadow-lg col-3">
   <div class="card-body">

           <%= attachment_image_tag plan.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          　<p clas="card-name"><%= link_to user_path(plan.user) do %><%= plan.user.name %>先生</p><% end %>
         　 <p class="card-title"><%= link_to plan_path(plan.id) do %><%= plan.title %></p> <% end %>
　　　　　　<p class="card-text">内容:<%= plan.content %></p>
    </div>
</div>

<% end %>
  </div>
</div>
</div>
</div>

