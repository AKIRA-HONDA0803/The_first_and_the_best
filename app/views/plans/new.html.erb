<h1>投稿フォーム</h1>
<% if @plan.errors.any? %>
  <%= @plan.errors.count %>件のエラーが発生しました
  <% @plan.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @plan,local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>内容</h4>
  <%= f.text_field :content %>
  <%= f.submit '投稿' %>
<% end %>