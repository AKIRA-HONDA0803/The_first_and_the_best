<h2><%= @user.name %>さんがフォロー中</h2>

<div class="followings-container">
<% if @users.exists? %>
<% @users.each do |user| %>
<div class="col-lg-8 mt-3 offset-lg-2 ">

  <div class="row">
	<div class="col-lg-3">
　　<%= link_to user_path(user) do %>
    <%= attachment_image_tag(user, :profile_image, :fill, 150, 200, fallback: "no_image.jpg") %>
  </div>

        <div class="col-lg-9">
        <h3><strong><%= user.name %></strong></h3><% end %>
        <hr></hr>
          <ul class="navbar-nav ml-auto">
        <li>フォロー数: <%= user.followings.count %>
        フォロワー数: <%= user.followers.count %></li>
        <hr></hr>
        <%=user.introduction %>
        </ul>

</div>
          </div>
            </div>
    <% end %>

<% else %>
  <p>ユーザーはいません</p>
<% end %>

              </div>